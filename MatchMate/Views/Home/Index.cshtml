                    </div>
                </div>
                <a href="@Url.Action("Index", "Games")" class="btn btn-primary btn-lg px-4 rounded-pill">
                    <i class="fas fa-gamepad me-2"></i> Play Now
                </a>
            }
            else
            {
                <div class="d-flex justify-content-center gap-3">
                    <a href="@Url.Action("Login", "Account")" class="btn btn-primary btn-lg px-4 rounded-pill">
                        <i class="fas fa-sign-in-alt me-2"></i> Log in
