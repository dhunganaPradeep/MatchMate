@section Scripts {
    <script>
        $(function () {
            $('.game-card').each(function (i) {
                var card = $(this);
                setTimeout(function () {
                    card.addClass('animate__animated animate__fadeIn');
                }, i * 150);
            });

            loadPlayerSummary();

            function loadPlayerSummary() {
                let totalGames = 0;
                let totalWins = 0;

                $.ajax({
                    url: '/Games/GetGameStats',
                    type: 'GET',
                    data: {
                        gameId: 1,
                        _: new Date().getTime()
                    },
                    success: function (data) {
                        if (data.success) {
                            totalGames += data.stats.total || 0;
                            totalWins += data.stats.wins || 0;
                            updateSummary();
                        }
                    }
                });

                $.ajax({
                    url: '/Games/GetGameStats',
                    type: 'GET',
                    data: {
                        gameId: 2,
                        _: new Date().getTime()
                    },
                    success: function (data) {
                        if (data.success) {
                            totalGames += data.stats.total || 0;
                            totalWins += data.stats.wins || 0;
                            updateSummary();
                        }
                    }
                });

                function updateSummary() {
                    $('#summary-total-games').text(totalGames);
                    $('#summary-total-wins').text(totalWins);
                    const winRate = totalGames > 0 ? Math.round((totalWins / totalGames) * 100) : 0;
                    $('#summary-win-rate').text(winRate + '%');
                }
            }
        });
    </script>

    <style>
        .bg-gradient-primary {
            background: linear-gradient(135deg, var(--primary), var(--secondary));
        }

        .bg-gradient-secondary {
            background: linear-gradient(135deg, #6c757d, #495057);
        }

        .bg-gradient-warning {
            background: linear-gradient(135deg, #ffc107, #fd7e14);
        }

        .bg-gradient-info {
            background: linear-gradient(135deg, #17a2b8, #0097a7);
        }

        .game-card {
            transition: all 0.3s ease;
            overflow: hidden;
            border-radius: 12px;
        }

            .game-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 15px 30px rgba(0,0,0,0.1) !important;
            }

        .game-card-img {
            height: 180px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .badge-players-online {
            position: absolute;
            top: 15px;
            right: 15px;
            background-color: rgba(0,0,0,0.6);
            color: white;
            border-radius: 20px;
            padding: 5px 15px;
            font-size: 0.8rem;
            z-index: 10;
        }

        .coming-soon-card {
            border: 2px dashed rgba(0,0,0,0.1);
        }

        .stats-icon {
            width: 65px;
            height: 65px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .animate__fadeIn {
            animation-duration: 0.8s;
        }
    </style>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
}