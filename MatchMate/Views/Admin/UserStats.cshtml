@model MatchMate.Models.UserStatsViewModel
@{
    ViewBag.Title = $"Statistics for {Model.Username}";
}

<h2><i class="fas fa-chart-bar me-2"></i>@ViewBag.Title</h2>
<div class="card">
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Game</th>
                    <th>Total Games</th>
                    <th>Wins</th>
                    <th>Losses</th>
                    <th>Ties</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var stats in Model.GameStats)
                {
                    <tr>
                        <td>@stats.GameName</td>
                        <td>@stats.TotalGames</td>
                        <td>@stats.Wins</td>
                        <td>@stats.Losses</td>
                        <td>@stats.Ties</td>
                    </tr>
                }
            </tbody>
        </table>
        <a href="@Url.Action("Dashboard")" class="btn btn-primary"><i class="fas fa-arrow-left me-2"></i>Back to Dashboard</a>
    </div>
</div>